#Options +FollowSymlinks

#Options -Indexes

#<FilesMatch "(?i)((\.tpl|\.ini|\.log|(?<!robots)\.txt))">
# Order deny,allow
# Deny from all
#</FilesMatch>

RewriteEngine On

RewriteBase /

RewriteRule ^css/(.*)$	/dist/css/$1 [L]
RewriteRule ^js/(.*)$	/dist/js/$1 [L]
RewriteRule ^images/(.*)$	/dist/images/$1 [L]

RewriteRule ^(account|information|order)/css/(.*)$	/dist/css/$2 [L]
RewriteRule ^(account|information|order)/js/(.*)$	/dist/js/$2 [L]
RewriteRule ^(account|information|order)/images/(.*)$	/dist/images/$2 [L]

RewriteRule ^sitemap.xml$ index.php?route=feed/google_sitemap [L]
RewriteRule ^googlebase.xml$ index.php?route=feed/google_base [L]
RewriteRule ^system/download/(.*) /index.php?route=error/not_found [L]

# RewriteRule ^/$	/index.php?route=common/home [L]

RewriteRule ^factory$ index.php?route=factory/factory [L]
RewriteRule ^example$ index.php?route=example/example [L]


RewriteRule ^account/(login|register|account|edit|password|address|wishlist|order|logout)$ index.php?route=account/$1 [L]

RewriteRule ^information/(introduce|issues|support).html$ index.php?route=information/information/$1 [L]

# RewriteRule ^register.html$ index.php?route=account/register[L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !.*\.(ico|gif|jpg|jpeg|png|js|css)
RewriteRule ^([^?]*) index.php?_route_=$1 [L,QSA]